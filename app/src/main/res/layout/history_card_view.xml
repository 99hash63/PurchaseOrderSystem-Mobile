<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="160dp"
    android:layout_marginTop="12dp"
    android:layout_marginStart="16dp"
    android:layout_marginEnd="16dp"
    android:id="@+id/card_pertanyaan"
    android:outlineSpotShadowColor="@color/dark_grey"
    android:outlineAmbientShadowColor="@color/dark_grey"
    card_view:cardElevation="15dp"
    card_view:cardBackgroundColor="@color/white"
    card_view:cardCornerRadius="8dp"
    card_view:contentPadding="10dp"
    android:foreground="?selectableItemBackground"
    android:clickable="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="140dp">


        <TextView
            android:id="@+id/order_level_display"
            android:layout_width="134dp"
            android:textColor="@color/light_black"
            android:layout_height="20dp"
            android:textStyle="bold"
            android:text="TextView"
            card_view:layout_constraintStart_toStartOf="parent"
            card_view:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/order_num_display"
            android:layout_width="134dp"
            android:layout_height="20dp"
            android:text="TextView"
            android:textSize="10dp"
            card_view:layout_constraintStart_toStartOf="parent"
            card_view:layout_constraintTop_toBottomOf="@+id/order_level_display" />

        <TextView
            android:id="@+id/order_requiredDate_display"
            android:layout_width="154dp"
            android:layout_height="20dp"
            android:paddingEnd="5dp"
            android:text="TextView"
            android:textAlignment="textEnd"
            android:textSize="10dp"
            card_view:layout_constraintEnd_toEndOf="parent"
            card_view:layout_constraintHorizontal_bias="1.0"
            card_view:layout_constraintStart_toStartOf="parent"
            card_view:layout_constraintTop_toTopOf="@+id/order_level_display" />

        <TextView
            android:id="@+id/order_totalPrice_display"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_marginTop="84dp"
            android:text="Total price: 4543.45"
            android:textSize="12dp"
            card_view:layout_constraintStart_toStartOf="parent"
            card_view:layout_constraintTop_toBottomOf="@+id/order_level_display" />

        <TextView
            android:id="@+id/order_supplier_display"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_marginTop="44dp"
            android:text="Supplier: Guuu Hardware"
            android:textSize="12dp"
            card_view:layout_constraintStart_toStartOf="parent"
            card_view:layout_constraintTop_toBottomOf="@+id/order_level_display" />

        <TextView
            android:id="@+id/order_totalItems_display"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_marginTop="64dp"
            android:text="Total Items: 20"
            android:textSize="12dp"
            card_view:layout_constraintStart_toStartOf="parent"
            card_view:layout_constraintTop_toBottomOf="@+id/order_level_display" />

        <TextView
            android:id="@+id/order_site_display"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_marginTop="24dp"
            android:text="Site: Matara"
            android:textSize="12dp"
            card_view:layout_constraintStart_toStartOf="parent"
            card_view:layout_constraintTop_toBottomOf="@+id/order_level_display" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>
